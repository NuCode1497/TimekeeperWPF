<UserControl x:Class="TimekeeperWPF.MonthDayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:t="clr-namespace:TimekeeperWPF.Tools"
             xmlns:local="clr-namespace:TimekeeperWPF"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border BorderBrush="Black" BorderThickness="0,0,1,1"
            Background="{Binding Path=IsToday, Converter={t:BoolToGreenConverter}, ConverterParameter=Background}">
        <TextBlock x:Name="DayTextBlock" Text="{Binding Path=DayOfMonth}"
                   Foreground="{Binding Path=IsNotInMonth, Converter={t:BoolToGrayConverter}, ConverterParameter=Foreground}" 
                   HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>
    </Border>
</UserControl>
