<Window x:Name="mainWindow" x:Class="TimekeeperWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:TimekeeperWPF"
        Title="Time Keeper" Height="420.142" Width="620.318"
        Style="{StaticResource WindowStyle}"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <l:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate DataType="{x:Type l:NotesViewModel}">
            <l:NotesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type l:FakeNotesViewModel}">
            <l:NotesView/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <ContentControl x:Name="ViewHolder" Margin="5" IsTabStop="False"
                        Content="{Binding Path=CurrentView}"/>
    </Grid>
</Window>
