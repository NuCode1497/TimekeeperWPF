<UserControl x:Class="TimekeeperWPF.TaskTypeSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <StackPanel Orientation="Horizontal">
        <Label Content="Task Type"  Width="80"/>
        <ComboBox Width="100" HorizontalAlignment="Left"
                  DisplayMemberPath="Name"
                  IsSynchronizedWithCurrentItem="True"
                  SelectedItem="{Binding Path=TaskType, Mode=TwoWay}"
                  ItemsSource="{Binding Path=DataContext.TaskTypesView, RelativeSource={RelativeSource AncestorType=Grid}}" />
    </StackPanel>
</UserControl>
