<UserControl x:Class="TimekeeperWPF.NotesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d"
             d:DesignHeight="500"
             d:DesignWidth="800">
    <!--d:DataContext="{d:DesignData testData.xaml}"-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="1">
            <Button Margin="1" Content="New Note" x:Name="AddNoteButton" 
                    Command="{Binding Path=NewNoteCommand}" Width="100"/>
            <Button Margin="1" Content="Refresh" x:Name="GetDataButton" 
                    Command="{Binding Path=GetDataCommand}" Width="100"/>
            <TextBlock Margin="1" Text="{Binding Path=Status, Mode=TwoWay}" x:Name="StatusTextBlock"/>
        </StackPanel>
        <Grid Grid.Row="1" x:Name="NotesControlPanel" IsEnabled="{Binding Path=IsNotLoading}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel>
                <StackPanel x:Name="NoteEditPanel" Margin="1" 
                        DataContext="{Binding Path=EditingNote}"
                            IsEnabled="{Binding ElementName=NoteEditCancelButton, Path=IsEnabled}">
                    <Label Content="Date Time"/>
                    <TextBox x:Name="NoteDateTextBox"
                         Margin="5" Height="26" VerticalContentAlignment="Center"
                         Text="{Binding Path=NoteDateTime, 
                        ValidatesOnDataErrors=True, ValidatesOnExceptions=True, 
                        UpdateSourceTrigger=PropertyChanged}" />
                    <Label Content="Note"/>
                    <TextBox x:Name="NoteTextBox"
                         Margin="5" Height="100" TextWrapping="Wrap"
                         Text="{Binding Path=NoteText, 
                        ValidatesOnDataErrors=True, ValidatesOnExceptions=True, 
                        UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <Grid Margin="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="NoteEditCancelButton" Grid.Column="0" Content="Cancel" Width="70"
                            Command="{Binding Path=CancelCommand}"/>
                    <Button x:Name="NoteEditDeleteButton" Grid.Column="1" Content="Delete" Width="70"
                            Command="{Binding Path=DeleteCommand}"/>
                    <Button x:Name="NoteEditSaveButton" Grid.Column="2" Content="Save" Width="70"
                            Command="{Binding Path=SaveCommand}"/>
                </Grid>
                <ListBox Margin="2" ItemsSource="{Binding ElementName=NoteEditPanel, Path=(Validation.Errors)}">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <ListBox ItemsSource="{Binding Path=ErrorContent}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
            <DataGrid x:Name="NotesGrid" Grid.Column="1"  HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                      Margin="1"
                      ItemsSource="{Binding Path=View}"
                      IsSynchronizedWithCurrentItem="True"
                      HeadersVisibility="Column"
                      SelectionMode="Single"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=NoteDateTime, Mode=TwoWay}" Header="Date &amp; Time" />
                    <DataGridTextColumn Binding="{Binding Path=NoteText, Mode=TwoWay}" Header="Text" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style>
                                <Setter Property="TextBlock.TextWrapping" Value="Wrap"/>
                                <Setter Property="TextBlock.TextTrimming" Value="CharacterEllipsis"/>
                                <Setter Property="TextBlock.FontSize" Value="12"/>
                                <Setter Property="TextBlock.LineHeight" Value="14"/>
                                <Setter Property="TextBlock.MaxHeight" Value="42"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>
