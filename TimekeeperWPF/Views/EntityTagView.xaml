<UserControl x:Class="TimekeeperWPF.EntityTagView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Name="ThisControl">
    <ContentControl Template="{StaticResource EntityTagTemplate}" IsTabStop="False">
        <StackPanel Orientation="Horizontal">
            <Label Height="32" VerticalAlignment="Center"
                   Content="{Binding Path=Text, ElementName=ThisControl, FallbackValue='É♫yilkjQ^Test'}" 
                   FontSize="14" 
                   Foreground="{StaticResource EntityTag.Foreground}" 
                   FontWeight="Bold"/>
            <Button Name="RemoveButton" IsTabStop="False"
                    Visibility="{Binding Path=RemoveButtonVisibility, ElementName=ThisControl}"
                    Style="{StaticResource TinyButtonDeleteStyle}" 
                    CommandParameter="{Binding}"
                    Command="{Binding Path=RemoveCommand, ElementName=ThisControl}"/>
        </StackPanel>
    </ContentControl>
</UserControl>
