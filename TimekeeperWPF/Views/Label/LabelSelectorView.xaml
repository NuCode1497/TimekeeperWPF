<UserControl x:Class="TimekeeperWPF.LabelSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimekeeperWPF"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="200">
    <Grid Name="LabelEditorGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
        <Label Grid.Row="0" Content="Labels" Width="80"/>
        <ComboBox Name="LabelsCbo" Grid.Row="0" DisplayMemberPath="Name"
                  IsSynchronizedWithCurrentItem="True" Width="100"
                  SelectedItem="{Binding Path=SelectedLabel, Mode=TwoWay}"
                  ItemsSource="{Binding Path=LabelsView}" />
            <Button Name="AddLabelBtn" Grid.Column="2" Grid.Row="0" Content="Add" Command="{Binding Path=AddLabelToNoteCommand}" 
                Visibility="{Binding Path=CanAddLabel, Converter={StaticResource BooleanToVisibilityConverter}}" Padding="4,1"/>
        </StackPanel>
        <Border Name="LabelListBdr" Grid.ColumnSpan="4" Grid.Row="2" BorderBrush="Purple" BorderThickness="1" Margin="2">
            <ItemsControl ItemsSource="{Binding Path=CurrentNoteLabelsView}" Name="LabelListIC">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Name="LabelListPnl"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:LabelView/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Grid>
</UserControl>
