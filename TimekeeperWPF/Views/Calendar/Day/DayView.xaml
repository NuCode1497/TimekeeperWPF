<UserControl x:Class="TimekeeperWPF.DayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimekeeperWPF"
             xmlns:cal="clr-namespace:TimekeeperWPF.Calendar"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400" Background="LimeGreen">
    <Grid x:Name="SV">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ContentControl x:Name="CommandsToolbar" Grid.Row="0" 
                        Template="{StaticResource CalendarViewControlsTemplate}"/>
        <ListBox x:Name="CalendarObjectsIC" Grid.Row="1"
                 SelectedItem="{Binding Path=SelectedCalendarObject, Mode=TwoWay}"
                 ItemsSource="{Binding Path=CalendarObjectsView}" 
                 ItemContainerStyle="{StaticResource CalObjContainerStyle}"
                 ScrollViewer.CanContentScroll="True"
                 HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <cal:Day x:Name="DayPanel" 
                             ScaleSudoCommand="{Binding Path=ScaleSudoCommand, Mode=OneWay}"
                             Date="{Binding Path=SelectedDate, Mode=TwoWay}"
                             Orientation="{Binding Path=Orientation, Mode=TwoWay}" 
                             ForceMaxScale="{Binding Path=Max, Mode=TwoWay}" 
                             ShowTextMargin="{Binding Path=TextMargin, Mode=TwoWay}" 
                             IsHighlightable="False"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <cal:CalendarObject/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ListBox>
        <local:LoadingView Grid.Row="0" Grid.RowSpan="2" Visibility="{Binding Path=IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
    </Grid>
</UserControl>
