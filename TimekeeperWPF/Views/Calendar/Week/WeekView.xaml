<UserControl x:Class="TimekeeperWPF.WeekView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimekeeperWPF"
             xmlns:cal="clr-namespace:TimekeeperWPF.Calendar"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <cal:Day Grid.Column="0" x:Name="Sunday" ForceMaxScale="True">
            <cal:CalendarObject Background="#7FFF6347" BorderBrush="Green" BorderThickness="5"/>
            <cal:NowMarkerHorizontal/>
        </cal:Day>
        <cal:Day Grid.Column="1" x:Name="Monday" ForceMaxScale="True">
        </cal:Day>
        <cal:Day Grid.Column="2" x:Name="Tuesday" ForceMaxScale="True"/>
        <cal:Day Grid.Column="3" x:Name="Wednesday" ForceMaxScale="True"/>
        <cal:Day Grid.Column="4" x:Name="Thursday" ForceMaxScale="True"/>
        <cal:Day Grid.Column="5" x:Name="Friday" ForceMaxScale="True"/>
        <cal:Day Grid.Column="6" x:Name="Saturday" ForceMaxScale="True"/>
    </Grid>
</UserControl>
