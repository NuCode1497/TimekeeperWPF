<UserControl x:Class="TimekeeperWPF.IncludeSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TimekeeperWPF"
             mc:Ignorable="d">
    <GroupBox Header="Includes" Margin="2">
        <StackPanel Name="IncludeEditorPanel">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Patterns " VerticalAlignment="Center" HorizontalAlignment="Left"/>
                <ComboBox Name="PatternsCbo" Width="100"
                          DisplayMemberPath="Name"
                          IsSynchronizedWithCurrentItem="False"
                          SelectedItem="{Binding Path=SelectedInclude}"
                          ItemsSource="{Binding Path=PatternsView}"/>
                <Button Style="{StaticResource TinyButtonCommitStyle}"
                        ToolTip="Include Selected Pattern"
                        Command="{Binding Path=AddIncludeCommand}"/>
            </StackPanel>
            <ItemsControl Name="IncludeListIC"
                          ItemsSource="{Binding Path=CurrentEntityIncludesView}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:EntityTagView 
                            RemoveCommand="{Binding ElementName=IncludeListIC, 
                            Path=DataContext.RemoveIncludeCommand}"
                            RemoveButtonVisibility="Visible"
                            Text="{Binding Path=Name}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </GroupBox>
</UserControl>
